<ol class="breadcrumb">
  <li class="active">
    <h4><%= t 'common.list' %></h4>
  </li>
</ol>

<div class="table-responsive">
  <table class="table">
    <thead>
        <tr clas="active">
          <th><%= t 'common.name' %></th>
          <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @types.each do |type| %>
            <tr>
              <td><%= type.name %></td>
              <td><%= link_to t('common.new'), type %></td>
              <td><%= link_to t('common.edit'), edit_type_path(type) %></td>
              <td><%= link_to t('common.delete'), type, method: :delete, data: { confirm: t('common.confirm') } %></td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>


<%= link_to 'New Type', new_type_path %>
